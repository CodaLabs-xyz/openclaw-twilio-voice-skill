{
  "sttProvider": "twilio",
  "stt": {
    "twilio": {
      "enabled": true,
      "note": "Default, uses Twilio built-in STT (no extra cost)"
    },
    "deepgram": {
      "enabled": false,
      "apiKey": "your_deepgram_api_key",
      "model": "nova-3",
      "note": "Lowest latency (~150ms), requires Media Streams"
    },
    "groq": {
      "enabled": false,
      "apiKey": "your_groq_api_key",
      "model": "whisper-large-v3-turbo",
      "note": "Best accuracy, batch mode only"
    }
  },
  "mediaStream": {
    "enabled": false,
    "port": 3002,
    "wsUrl": "wss://your-domain.com/media-stream"
  },
  "allowedNumbers": [
    {
      "number": "+1234567890",
      "pin": "123456",
      "name": "YourName"
    }
  ],
  "maxAttempts": 3,
  "rateLimitPerHour": 5,
  "port": 3001,
  "voices": {
    "es": "Polly.Andres-Neural",
    "en": "Polly.Matthew-Neural"
  },
  "menu": {
    "languages": [
      { "key": "1", "lang": "es", "voice": "Polly.Lupe", "prompt": "Para espa√±ol, presione uno." },
      { "key": "2", "lang": "en", "voice": "Polly.Joanna", "prompt": "For English, press two." }
    ],
    "voiceNote": { 
      "key": "9", 
      "voice": "Polly.Joanna", 
      "prompt": "To leave a voice note, press nine." 
    }
  },
  "voiceNotes": {
    "saveDir": "./voice-notes",
    "maxLengthSeconds": 120
  },
  "twilio": {
    "accountSid": "ACxxxxxxxxxx",
    "authToken": "your_auth_token",
    "phoneNumber": "+1234567890"
  },
  "asyncResponse": {
    "method": "gateway",
    "gateway": {
      "url": "http://localhost:18789",
      "token": "your_gateway_token"
    },
    "telegram": {
      "botToken": "your_bot_token",
      "chatId": "your_chat_id"
    },
    "sms": {
      "to": "+1234567890"
    },
    "webhook": {
      "url": "https://your-server.com/voice-callback",
      "headers": {
        "Authorization": "Bearer your_token"
      }
    }
  },
  "queueWorker": {
    "pollInterval": 30000
  },
  "ngrok": {
    "domain": "your-domain.ngrok.io"
  }
}
